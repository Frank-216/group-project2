<div class="box leftBox text-center">
  
    <h2>Your Pizza List!</h2>

    <ol>
      {{#each pizza}}
        {{#unless this.devoured}}
          <li>
         
            {{this.pizza_name}}
       

            <form action="pizza/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class=" btn btn-warning">Devour it!</button>
            </form>



            <form action="pizza/delete/{{this.id}}?_method=DELETE" method="POST">
              <!-- option 2, pass in the id of the cat inside the form - you would access this in the route using req.body.id not req.params.id -->
              <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit" class=" btn btn-danger">DELETE!</button>
            </form>



          </li>
        {{/unless}}
      {{/each}}
    </ol>

</div>

<div class="box rightBox text-center">
<h2>Dig in!</h2>

    <ol>
      {{#each pizza}}
        {{#if this.devoured}}
          <li>
            
            {{this.pizza_name}}
    

            <form action="pizza/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit" class=" btn btn-success">Finish Later!</button>
            </form>
          </li>
        {{/if}}
      {{/each}}
    </ol>

</div>

