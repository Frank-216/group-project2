<div class="container">

  <div class="row content">
    <div class="col-md-10 col-md-offset-1 text-center">

        <h2>Your Cart</h2>
        <p>Have a nice day!</p>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Product</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
           {{#each cartItems}}
              <td><img style="max-height:40px;" src="{{this.item.Images.0.url}}"/></td>
              <td style="text-align:left;">{{this.item.product}}</td>
              <td>{{this.item.price}}</td>
              <td>{{this.qty}}</td>
              <td>{{this.price}}</td>
          
            </tr>
           {{/each}}  
          </tbody>
        </table>
   </div>
  </div>

  <div class="row content">
      <div class="col-md-10 col-md-offset-1 text-center">
        <h2>Cart Totals</h2>
        
        <table class="table">

          <tbody>
            <tr>
              <td>Total Items</td>
              <td>{{CartTotals.cart.totalQty}}</td>
              
            </tr>
            <tr>
              <td>Cart Subtotal</td>
              <td>{{CartTotals.cart.totalPrice}}</td>
              
            </tr>
            <tr>
              <td>Shipping</td>
              <td>5$ for now</td>
              
            </tr>
            <tr>
              <td>Order Total</td>
              <td>{{CartTotals.cart.plusShipping}}</td>
              
            </tr>
            
          </tbody>
        </table>

        <a href="/checkout" class="btn btn-success">Chenkout</a>

   </div>

</div>

</div>
